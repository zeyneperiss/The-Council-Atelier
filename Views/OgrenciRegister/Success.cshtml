@{
    ViewData["Title"] = "Kayıt Başarılı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-wrapper" style="grid-template-columns: 1fr; max-width: 600px;">
        <div class="login-form-section" style="text-align: center;">
            <div class="login-form-wrapper">
                <div style="width: 80px; height: 80px; margin: 0 auto 24px; background: var(--text); color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 48px;">
                    ✓
                </div>
                
                <h1 class="login-title">Kayıt Başarılı!</h1>
                <p class="login-subtitle" style="margin-bottom: 32px;">
                    Hesabınız başarıyla oluşturuldu. Şimdi giriş yapabilirsiniz.
                </p>

                <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
                    <a asp-controller="OgrenciAuth" asp-action="Login" class="login-button" style="width: auto; text-decoration: none;">
                        <span>Giriş Yap</span>
                        <span class="login-button-arrow">→</span>
                    </a>
                    
                    <a asp-controller="Home" asp-action="Index" class="login-back-link" style="display: inline-flex; margin: 0;">
                        <span>←</span>
                        <span>Ana Sayfaya Dön</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
