@model List<CouncilAtelier.Models.Article>

@{
    ViewData["Title"] = "Admin • Makaleler";
}

<div class="admin-page">
    <!-- Header -->
    <div class="admin-page-header">
        <div>
            <h1 class="admin-page-title">Makaleler</h1>
            <p class="admin-page-subtitle">Veritabanındaki makalelerin listesi</p>
        </div>
        <div class="admin-page-actions">
            <a class="admin-btn admin-btn-primary" asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Create">
                <span>+</span>
                <span>Yeni Makale</span>
            </a>
            <a class="admin-btn admin-btn-outline" asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Deleted">
                Son Silinenler
            </a>
        </div>
    </div>

    <!-- Content -->
    @if (Model == null || !Model.Any())
    {
        <div class="admin-empty-state">
            <div class="admin-empty-icon"></div>
            <h3>Henüz makale yok</h3>
            <p>Yeni makale eklemek için yukarıdaki butona tıklayın</p>
            <a class="admin-btn admin-btn-primary" asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Create">
                <span>+</span>
                <span>İlk Makaleyi Ekle</span>
            </a>
        </div>
    }
    else
    {
        <div class="admin-content-grid">
            @foreach (var a in Model)
            {
                <div class="admin-content-card">
                    <div class="admin-content-card-body">
                        <h3 class="admin-content-card-title">
                            <a href="/Makaleler/@a.Slug" target="_blank" rel="noopener" style="color: inherit; text-decoration: none;">
                                @a.Title
                            </a>
                        </h3>
                        
                        <div class="admin-content-badge">@a.PublishedAt.Year</div>
                        
                        @if (!string.IsNullOrWhiteSpace(a.Summary))
                        {
                            <p class="admin-content-card-desc">
                                @(a.Summary.Length > 120 ? a.Summary.Substring(0, 120) + "..." : a.Summary)
                            </p>
                        }
                    </div>
                    
                    <div class="admin-content-card-footer">
                        <a class="admin-content-btn edit" asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Edit" asp-route-id="@a.Id">
                            Düzenle
                        </a>
                        
                        <form asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Delete" method="post" class="inline-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@a.Id" />
                            <button type="submit" class="admin-content-btn delete" onclick="return confirm('Bu makaleyi silmek istediğine emin misin?');">
                                Sil
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>