@{
    var ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
    string IsActive(string c) => ctrl == c.ToLowerInvariant() ? "is-active" : "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] • Council Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate, max-age=0" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
<div class="admin-shell" id="adminShell">

    <!-- SIDEBAR -->
    <aside class="admin-sidebar">
        <div class="admin-brand">
            <div class="admin-brand-title">Council</div>
            <div class="admin-brand-sub">Admin</div>
        </div>

        <nav class="admin-nav">
            <a class="admin-nav-link @IsActive("home")"
               asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-grid admin-ico"></i>
                <span class="admin-link-text">Panel</span>
            </a>

            <a class="admin-nav-link @IsActive("adminmakaleler")"
               asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Index">
                <i class="bi bi-file-earmark-text admin-ico"></i>
                <span class="admin-link-text">Makaleler</span>
            </a>

            <a class="admin-nav-link @IsActive("adminprogramlar")"
               asp-area="Admin" asp-controller="AdminProgramlar" asp-action="Index">
                <i class="bi bi-mortarboard admin-ico"></i>
                <span class="admin-link-text">Programlar</span>
            </a>

            <a class="admin-nav-link @IsActive("adminworkshoplar")"
               asp-area="Admin" asp-controller="AdminWorkshoplar" asp-action="Index">
                <i class="bi bi-calendar-event admin-ico"></i>
                <span class="admin-link-text">Workshoplar</span>
            </a>

            <a class="admin-nav-link @IsActive("adminbasvurular")"
               asp-area="Admin" asp-controller="AdminBasvurular" asp-action="Index"
               title="Başvurular">
                <i class="bi bi-inbox admin-ico" aria-hidden="true"></i>
                <span class="admin-link-text">Başvurular</span>
            </a>
        </nav>

        <!-- SIDEBAR FOOTER -->
        <div class="admin-sidebar-footer">
            <a class="admin-nav-link" href="/">
                <i class="bi bi-globe2 admin-ico"></i>
                <span class="admin-link-text">Siteyi Gör</span>
            </a>

            <!-- ÇIKIŞ (POST) -->
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="inline-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="admin-linklike">Çıkış</button>
            </form>
        </div>
    </aside>

    <!-- CONTENT -->
    <main class="admin-main">
        <header class="admin-topbar">
            <button type="button" class="admin-toggle" id="adminToggle" aria-label="Menü">
                <i class="bi bi-list"></i>
            </button>

            <div class="admin-topbar-title">@ViewData["Title"]</div>

            <div class="admin-top-actions">
                <a href="/" class="btn-outline">Siteyi Gör</a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="inline-form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-outline btn-logout">Çıkış</button>
                </form>
            </div>
        </header>

        <div class="admin-content">
            @RenderBody()
        </div>
    </main>

</div>

<!-- JS: Bootstrap -> admin.js -> sayfa bazli scriptler -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>
  // Safari/Chrome bfcache: geri gelince sayfa "persisted" olabiliyor.
  window.addEventListener("pageshow", function (event) {
    if (event.persisted) {
      window.location.reload();
    }
  });
</script>

</body>
</html>