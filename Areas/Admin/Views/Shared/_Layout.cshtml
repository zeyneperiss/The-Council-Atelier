@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CouncilAtelier Admin</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <nav class="site-nav">
            <a class="brand" asp-area="Admin" asp-controller="AdminHome" asp-action="Index">Admin Panel</a>

            <div class="nav-actions">
                <a class="btn-outline" asp-area="Admin" asp-controller="AdminMakaleler" asp-action="Index">Makaleler</a>
                <a class="btn-outline" asp-area="" asp-controller="Home" asp-action="Index">Siteyi Gör</a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="admin-linklike">Çıkış</button>
                </form>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>